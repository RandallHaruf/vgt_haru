				<f:heading>
					<Title text="{i18n>viewListagemRequisicoesTituloBeps}"/>
				</f:heading>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML"/>
				</f:navigationActions>
				<f:expandedContent>
					<ObjectIdentifier title="Vale"/>
				</f:expandedContent>
			</f:DynamicPageTitle>
		</f:title>
