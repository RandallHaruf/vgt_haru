<mvc:View controllerName="ui5ns.ui5.controller.beps.FormularioDetalhesObrigacao" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:f2="sap.f" xmlns="sap.m" class="viewBepsFormularioDetalhesObrigacao" xmlns:u="sap.ui.unified">
	<f2:DynamicPage title="Beps - Formulário Detalhamento Obrigação" showFooter="true">
		<f2:title>
			<f2:DynamicPageTitle>
				<f2:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" enabled="false"/>
						<Link text="Listagem Obrigações" enabled="false"/>
						<Link text="Formulário Detalhe Obrigação" enabled="false"/>
					</Breadcrumbs>
				</f2:breadcrumbs>
				<f2:heading>
					<Title text="Beps - Formulário de Detalhe de Obrigação"/>
				</f2:heading>
				<f2:snappedContent>
					<ObjectIdentifier title="Vale"/>
				</f2:snappedContent>
			</f2:DynamicPageTitle>
		</f2:title>
		<f2:header>
			<f2:DynamicPageHeader pinnable="false">
				<f2:content>
					<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
						<items>
							<Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
								<content>
									<l:VerticalLayout>
										<l:HorizontalLayout allowWrapping="true" class="sapUiSmallMarginBottom">
											<ObjectIdentifier title="Vale"/>
										</l:HorizontalLayout>
										<l:HorizontalLayout allowWrapping="true">
											<l:VerticalLayout>
												<ObjectAttribute title="Ano Calendário" text="2018"/>
											</l:VerticalLayout>
										</l:HorizontalLayout>
									</l:VerticalLayout>
								</content>
							</Panel>
						</items>
					</FlexBox>
				</f2:content>
			</f2:DynamicPageHeader>
		</f2:header>
		<f2:content>
			<VBox class="sapUiSmallMargin">
				<f:Form id="formularioObrigacao" editable="true">
					<f:title>
						<core:Title text="{i18n>formularioObrigacaoTituloObrigacao}"/>
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
							emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="{i18n>formularioObrigacaoLabelEmpresa}">
									<f:fields>
										<Select id="selectEmpresas">
											<items>
												<core:Item text=""/>
												<core:Item text="Empresa A" key="1"/>
												<core:Item text="Empresa B" key="2"/>
												<core:Item text="Empresa C" key="2"/>
											</items>
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelTipo}">
									<f:fields>
										<Select id="selectTipo">
											<items>
												<core:Item text=""/>
												<core:Item text="Tipo 1" key="1"/>
												<core:Item text="Tipo 2" key="2"/>
												<core:Item text="Tipo 3" key="2"/>
											</items>
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelPeriodicidade}">
									<f:fields>
										<Select id="selectPeriodicidade">
											<items>
												<core:Item text=""/>
												<core:Item text="Periodicidade 1" key="1"/>
												<core:Item text="Periodicidade 2" key="2"/>
												<core:Item text="Periodicidade 3" key="2"/>
											</items>
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelAnoFiscal}">
									<f:fields>
										<Select id="selectAnoFiscal">
											<items>
												<core:Item text=""/>
												<core:Item text="2018"/>
												<core:Item text="2017"/>
												<core:Item text="2016"/>
											</items>
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelPrazoEntrega}">
									<f:fields>
										<DatePicker id="datepickerPrazoEntrega" placeholder="{i18n>placeholderDatepicker}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelExtensao}">
									<f:fields>
										<DatePicker id="datepickerExtensao" placeholder="{i18n>placeholderDatepicker}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelObrigacaoIniciada}">
									<f:fields>
										<CheckBox id="checkObrigacaoIniciada"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Suporte Contratado">
									<f:fields>
										<CheckBox id="checkSuporteContratado"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelSuporte}">
									<f:fields>
										<TextArea id="textAreaSuporte" rows="5" enabled="false"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelObservacoes}">
									<f:fields>
										<TextArea id="textAreaObservacoes" rows="5"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
				<f:Form id="formularioDocumentos">
					<f:title>
						<core:Title text="{i18n>formularioObrigacaoTituloDocumentos}"/>
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
							emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="true"/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement>
									<VBox>
										<VBox>
											<HBox>
												<CheckBox id="CheckSeleciona" text="{i18n>viewComplianceFormularioObrigacoesTituloConcluida}" selected="{/IsDeclaracao}"
													select="onSelecionaCheck" class="sapUiSmallMarginEnd"/>
											</HBox>
											<HBox>
												<DatePicker id="DataAtual" valueFormat="yyyy-MM-dd" enabled="false" visible="{= ${/IsDeclaracao} === true ? true : false}"/>
											</HBox>
											<HBox>
												<u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="" width="400px" tooltip="Enviar o arquivo para o Nodejs"
													placeholder="Escolha um arquivo"/>
												<Button id="btnEnviar" text="Enviar Arquivo" press="onEnviarArquivo"/>
											</HBox>
										</VBox>
										<Table id="tabelaDocumentos" inset="false" items="{ path: '/Documentos', sorter: [{ path: 'nome_arquivo' }, { path: 'data_upload' }] }">
											<headerToolbar>
												<Toolbar>
													<Title text="Arquivos da Obrigação"/>
												</Toolbar>
											</headerToolbar>
											<columns>
												<Column>
													<Title text="Nome"/>
												</Column>
												<Column>
													<Title text="Data Upload"/>
												</Column>
												<Column width="6.5rem"/>
											</columns>
											<items>
												<ColumnListItem>
													<cells>
														<ObjectIdentifier title="{nome_arquivo}" text="{label_declaracao}" class="sapMTableContentMargin"/>
														<ObjectNumber number="{data_upload}"/>
														<HBox>
															<Button icon="sap-icon://download-from-cloud" type="Accept" tooltip="Baixar arquivo" press="onBaixarArquivo" enabled="{btnDownloadEnabled}"
																class="sapUiSmallMarginEnd"/>
															<Button icon="sap-icon://delete" type="Reject" tooltip="Excluir arquivo" press="onExcluirArquivo" enabled="{btnExcluirEnabled}"/>
														</HBox>
													</cells>
												</ColumnListItem>
											</items>
										</Table>
									</VBox>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</f2:content>
		<f2:footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>formularioObrigacaoBotaoSalvar}" type="Accept" press="onSalvar"/>
				<Button text="{i18n>formularioObrigacaoBotaoCancelar}" type="Reject" press="onCancelar"/>
			</Toolbar>
		</f2:footer>
	</f2:DynamicPage>
</mvc:View>