<mvc:View controllerName="ui5ns.ui5.controller.taxPackage.RelatorioCreditSchedule" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome" />
						<!--<Link text="Tax Package" press="navToPage2" />-->
						<Link text="{i18n>viewGeralRelatorio} {i18n>viewTaxpackageEdiçãoTrimestreCreditSchedule}" enabled="false" />
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<vm:VariantManagement id="myVariantManagement" standardItemText="{i18n>viewGeralRelatorio} {i18n>viewTaxpackageEdiçãoTrimestreCreditSchedule}" save="onSaveView"></vm:VariantManagement>
				</f:heading>
				<f:actions>
					<Text 
						text="{i18n>viewRelatorioExportar}"	/>
					<!--<Button
						text="{i18n>viewRelatorioImprimir}"
						type="Transparent"
						icon="sap-icon://print" />-->
					<Button
						text="CSV"
						type="Transparent"
						press="onGerarCsv"/>
					<Button
						text="TXT"
						type="Transparent"
						press="onGerarTxt"/>
					<Button
						text="XLS"
						type="Transparent"
						press="onGerarXlsx"/>
					<!--<Button
						text="{i18n>viewRelatorioExportar} PDF"
						type="Transparent"/>-->
				</f:actions>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML" />
				</f:navigationActions>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<fb:FilterBar tooltip="teste" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="false">
						<fb:filterItems>
							<fb:FilterItem name="A" label="{i18n>viewRelatorioEmpresa}">
								<fb:control>
									<MultiComboBox id="selectEmpresa" selectionFinish="onSelectChange" items="{ path: '/Empresa' }" selectedKeys="{/IdEmpresasSelecionadas}">
										<core:Item key="{tblEmpresa.id_empresa}" text="{tblEmpresa.nome}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="{i18n>viewGeralAnoCalendario}">
								<fb:control>
									<MultiComboBox id="selectAnoCalendario" selectionFinish="onSelectChange" items="{ path: '/DominioAnoCalendario' }" selectedKeys="{/IdDominioAnoCalendarioSelecionadas}">
										<core:Item key="{tblDominioAnoCalendario.id_dominio_ano_calendario}" text="{tblDominioAnoCalendario.ano_calendario}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="{i18n>viewGeralPeriodo}">
								<fb:control>
									<MultiComboBox id="selectPeriodo" selectionFinish="onSelectChange" items="{ path: '/Periodo' }" selectedKeys="{/IdPeriodoSelecionadas}">
										<core:Item key="{tblPeriodo.numero_ordem}" text="{tblPeriodo.periodo}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="{i18n>viewGeralMoeda}">
								<fb:control>
									<MultiComboBox id="selectMoeda" selectionFinish="onSelectChange" items="{ path: '/DominioMoeda' }" selectedKeys="{/IdMoedaSelecionadas}">
										<core:Item key="{tblDominioMoeda.id_dominio_moeda}" text="{tblDominioMoeda.acronimo} - {tblDominioMoeda.nome}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="{i18n>viewEdiçãoTrimestreFY}">
								<fb:control>
									<MultiComboBox id="selectFY" selectionFinish="onSelectChange" items="{ path: '/FY' }" selectedKeys="{/FYSelecionadas}">
										<core:Item key="{tblSchedule.fy}" text="{tblSchedule.fy}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>							
						</fb:filterItems>
					</fb:FilterBar>
					<HBox justifyContent="End" class="sapUiSmallMarginEnd">
					<Button
					id="GerarRelatorio"
					text="{i18n>viewGeralBtnRelatorioTaxP}"
					type="Emphasized"
					press="onGerarRelatorio"/>	
					</HBox>	
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<ScrollContainer horizontal="true" vertical="true" height="100%">
				<Table id="relatorioDoTaxPackage" items="{ path: '/ReportTaxPackage'}">
					<columns>
						<Column width="{/remtblEmpresa.nome}">
							<Text text="{i18n>viewRelatorioEmpresa}"/>
						</Column>
						<Column width="{/remtblDominioAnoCalendario.ano_calendario}">
							<Text text="{i18n>viewGeralAnoCalendario}"/>
						</Column>
						<Column width="{/remtblPeriodo.periodo}">
							<Text text="{i18n>viewGeralPeriodo}"/>
						</Column>
						<Column width="{/remtblDominioMoeda.acronimo}">
							<Text text="{i18n>viewGeralMoeda}"/>
						</Column>
						<Column width="{/remtblSchedule.fy}">
							<Text text="{i18n>viewEdiçãoTrimestreFY}"/>
						</Column>
						<Column width="{/remtblSchedule.year_of_expiration}">
							<Text text="{i18n>viewEdiçãoTrimestreYearofExpiration}"/>
						</Column>
						<Column width="{/remtblSchedule.opening_balance}">
							<Text text="{i18n>viewEdiçãoTrimestreOpeningBalance}"/>
						</Column>
						<Column width="{/remtblSchedule.current_year_value}">
							<Text text="{i18n>viewEdiçãoTrimestreCurrentYearCredit}"/>
						</Column>	
						<Column width="{/remtblSchedule.current_year_value_utilized}">
							<Text text="{i18n>viewEdiçãoTrimestreCurrentYearCreditU}"/>
						</Column>
						<Column width="{/remtblSchedule.adjustments}">
							<Text text="{i18n>viewEdiçãoTrimestreAdjustments}"/>
						</Column>
						<Column width="{/remtblSchedule.justificativa}">
							<Text text="{i18n>viewEdiçãoTrimestreJustificativa}"/>
						</Column>
						<Column width="{/remtblSchedule.current_year_value_expired}">
							<Text text="{i18n>viewEdiçãoTrimestreCurrentYearCreditE}"/>
						</Column>
						<Column width="{/remtblSchedule.closing_balance}">
							<Text text="{i18n>viewEdiçãoTrimestreClosingBalance}"/>
						</Column>		
						<Column width="{/remtblSchedule.obs}">
							<Text text="{i18n>viewEdiçãoTrimestreOBS}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{tblEmpresa.nome}"/>
								<Text text="{tblDominioAnoCalendario.ano_calendario}"/>
								<Text text="{tblPeriodo.periodo}"/>
								<Text text="{tblDominioMoeda.acronimo}"/>
								<Text text="{tblSchedule.fy}"/>
								<Text text="{tblSchedule.year_of_expiration}"/>
								<Text
								text="{
								  path: 'tblSchedule.opening_balance',
								  type: 'sap.ui.model.type.Float',
								  formatOptions: {
					                 maxFractionDigits: 2
								  }
								}" />	
								<Text
								text="{
								  path: 'tblSchedule.current_year_value',
								  type: 'sap.ui.model.type.Float',
								  formatOptions: {
					                 maxFractionDigits: 2
								  }
								}" />	
								<Text
								text="{
								  path: 'tblSchedule.current_year_value_utilized',
								  type: 'sap.ui.model.type.Float',
								  formatOptions: {
					                 maxFractionDigits: 2
								  }
								}" />									
								<Text
								text="{
								  path: 'tblSchedule.adjustments',
								  type: 'sap.ui.model.type.Float',
								  formatOptions: {
					                 maxFractionDigits: 2
								  }
								}" />								
								<Text text="{tblSchedule.justificativa}"/>
								<Text
								text="{
								  path: 'tblSchedule.current_year_value_expired',
								  type: 'sap.ui.model.type.Float',
								  formatOptions: {
					                 maxFractionDigits: 2
								  }
								}" />									
								<Text
								text="{
								  path: 'tblSchedule.closing_balance',
								  type: 'sap.ui.model.type.Float',
								  formatOptions: {
					                 maxFractionDigits: 2
								  }
								}" />		
								<Text
								text="{
								  path: 'tblSchedule.obs',
								  type: 'sap.ui.model.type.Float',
								  formatOptions: {
					                 maxFractionDigits: 2
								  }
								}" />								
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</f:content>
	</f:DynamicPage>
</mvc:View>