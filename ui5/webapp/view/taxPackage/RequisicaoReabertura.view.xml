<mvc:View
	controllerName="ui5ns.ui5.controller.taxPackage.RequisicaoReabertura"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns="sap.m">
	<f:DynamicPage
		title="{i18n>viewTPRequisicaoReaberturaTituloPagina}"
		showNavButton="true"
		navButtonPress="onNavBack"
		toggleHeaderOnTitleClick="false">
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome" />
						<Link text="{i18n>viewTPListagemEmpresaListaDeEmpresas}" press="navToPage2" />
						<Link text="{i18n>viewTPRequisicaoReaberturaTituloResumoTrimestre}" press="navToPage3" />
						<Link text="{i18n>viewTPRequisicaoReaberturaTituloTabela}" enabled="false" />
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<Title text="{i18n>viewTPRequisicaoReaberturaTituloPagina}"/>
				</f:heading>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML" />
				</f:navigationActions>
				<f:expandedContent>
					<ObjectIdentifier title="Vale" />
				</f:expandedContent>
			</f:DynamicPageTitle>
		</f:title>
		<!--<f:header>
			<f:DynamicPageHeader pinnable="false">
				<f:content>
					<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
						<items>
							<Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
								<content>
									<l:HorizontalLayout allowWrapping="true">
										<l:VerticalLayout>
											<ObjectIdentifier title="Vale" class="sapUiSmallMarginBottom" />
											<ObjectAttribute title="Ano Calendário" text="2018"/>
										</l:VerticalLayout>
									</l:HorizontalLayout>
								</content>
							</Panel>
						</items>
					</FlexBox>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>-->
		<f:content>
			<Table
				id="tabelaObjetos"
				items="{
					path: '/requisicoes'
				}"
				growing="true"
				enableBusyIndicator="true"
				growingScrollToLoad="true"
				updateFinished="onTerminouAtualizar">
		
				<headerToolbar>
					<Toolbar>
						<Title 
							id="cabecalhoTabelaObjetos" 
							text="{i18n>viewTPRequisicaoReaberturaTituloTabela}"/>
						<ToolbarSpacer />
						<!--<Button 
							id="botaoNovoObjeto" 
							icon="sap-icon://add" 
							press="onNovoObjeto" 
							text="novo"
							type="Emphasized"/>-->
						<Select tooltip="Status">
							<core:Item text="Aguardando" />
						</Select>
					</Toolbar>
				</headerToolbar>
		
				<columns>
					<Column>
						<Text text="ID Requisição" />
					</Column>
					<Column
						minScreenWidth="XXLarge"
						demandPopin="true">
						<Text text="{i18n>viewTPRequisicaoReaberturaEmpresa}" />
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true">
						<Text text="{i18n>viewTPRequisicaoReaberturaTrimestre}" />
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true">
						<Text text="{i18n>viewTPRequisicaoReaberturaDataDERequisicao}" />
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true">
						<Text text="{i18n>viewTPRequisicaoReaberturaAno}" />
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true">
						<Text text="{i18n>viewTPRequisicaoReaberturaUsuario}" />
					</Column>
					<Column>
						<Text text="{i18n>viewTPRequisicaoReaberturaJustificativa}" />
					</Column>
					<Column>
						<Text text="{i18n>viewTPRequisicaoReaberturaResposta}" />
					</Column>
					<Column hAlign="Center">
						<Text text="Status" />
					</Column>
				</columns>
		
				<items>
					<ColumnListItem
						press="onAbrirObjeto">
						<cells>
							<ObjectIdentifier title="{id}" />
							<Text text="{empresa}" />
							<Text text="{trimestre}" />
							<Text text="{dataRequisicao}" />
							<Text text="{anoRequisicao}" />
							<Text text="{usuario}" />
							<Text text="{justificativa}" />
							<Text text="{resposta}" />
							<core:Icon src="{status/icone}" color="{status/cor}" tooltip="{status/tooltip}" size="2rem" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>