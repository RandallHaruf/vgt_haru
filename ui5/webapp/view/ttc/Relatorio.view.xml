<mvc:View controllerName="ui5ns.ui5.controller.ttc.Relatorio" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome" />
						<Link text="TTC" press="navToPage2" />
						<Link text="{i18n>viewGeralRelatorio}" enabled="false" />
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<vm:VariantManagement id="myVariantManagement" standardItemText="  " save="onSaveView"></vm:VariantManagement>
				</f:heading>
				<f:actions>
					<Button
						text="{i18n>viewRelatorioImprimir}"
						type="Transparent"
						icon="sap-icon://print" 
						press="onImprimir" />
					<Button
						text="{i18n>viewRelatorioExportar} CSV"
						type="Transparent"/>
					<Button
						text="{i18n>viewRelatorioExportar} TXT"
						type="Transparent" />
					<Button
						text="{i18n>viewRelatorioExportar} XLS"
						type="Transparent"/>
					<Button
						text="{i18n>viewRelatorioExportar} PDF"
						type="Transparent"/>
				</f:actions>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML" />
				</f:navigationActions>
				<!--<f:navigationActions>
					<Button
						text="Voltar"
						icon="sap-icon://nav-back"
						type="Emphasized" 
						press="onNavBack"/>
				</f:navigationActions>-->
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<f:content>
					<fb:FilterBar reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="false">
						<fb:filterItems>
							<fb:FilterItem name="A" label="{i18n>viewRelatorioEmpresa}">
								<fb:control>
									<MultiComboBox id="selectEmpresa" selectionChange="onSelectChange" items="{ path: '/Empresa' }" selectedKeys="{/IdEmpresasSelecionadas}">
										<core:Item key="{id_empresa}" text="{nome}"/>									
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="{i18n>viewRelatorioClassificacao}">
								<fb:control>
									<MultiComboBox id="selectClassification" selectionChange="onSelectChange"  items="{ path: '/DominioTaxClassification' }" selectedKeys="{/IdDominioTaxClassificationSelecionadas}">
										<core:Item key="{id_dominio_tax_classification}" text="{classification}"/>										
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="{i18n>viewRelatorioCategoria}">
								<fb:control>
									<MultiComboBox id="selectCategory" selectionChange="onSelectChange"  items="{ path: '/TaxCategory' }" selectedKeys="{/IdTaxCategorySelecionadas}">
										<core:Item key="{id_tax_category}" text="{category}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="{i18n>viewRelatorioT}">
								<fb:control>
									<MultiComboBox id="selectTax" selectionChange="onSelectChange"  items="{ path: '/Tax' }" selectedKeys="{/IdTaxSelecionadas}" >
										<core:Item key="{id_tax}" text="{tax}"/>										
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="{i18n>viewRelatorioNomeT}">
								<fb:control>
									<MultiComboBox id="selectNameOfTax" selectionChange="onSelectChange"  items="{ path: '/NameOfTax' }" selectedKeys="{/IdNameOfTaxSelecionadas}" >
										<core:Item key="{id_name_of_tax}" text="{name_of_tax}"/>										
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="F" label="{i18n>viewRelatorioJurisdicao}">
								<fb:control>
									<MultiComboBox id="selectJurisdicao" selectionChange="onSelectChange"  items="{ path: '/DominioJurisdicao' }" selectedKeys="{/IdDominioJurisdicaoSelecionadas}" >
										<core:Item key="{id_dominio_jurisdicao}" text="{jurisdicao}"/>																				
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="G" label="{i18n>viewRelatorioPais}">
								<fb:control>
									<MultiComboBox id="selectPais" selectionChange="onSelectChange"  items="{ path: '/DominioPais' }" selectedKeys="{/IdDominioPaisSelecionadas}" >
										<core:Item key="{id_dominio_pais}" text="{pais}"/>											
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="H" label="{i18n>viewRelatorioAnoFiscal}">
								<fb:control>
									<MultiComboBox id="selectAnoFiscal" selectionChange="onSelectChange"  items="{ path: '/DominioAnoFiscal' }" selectedKeys="{/IdDominioAnoFiscalSelecionadas}" >
										<core:Item key="{id_dominio_ano_fiscal}" text="{ano_fiscal}"/>																				
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="I" label="{i18n>ViewRelatorioDataDePagamentoInÃ­cio}">
								<fb:control>
									<DateRangeSelection	id="DataPagamento" dateValue="{/DataPagamentoInicio}"	secondDateValue="{/DataPagamentoFim}" 
									displayFormat="yyyy-MM-dd" delimiter="{i18n>viewGeralAte}" change="onSelectChange"/>
								</fb:control>
							</fb:FilterItem>								
							<fb:FilterItem name="K" label="{i18n>ViewRelatorioCurrency}">
								<fb:control>
									<MultiComboBox id="selectCurrency" selectionChange="onSelectChange" items="{ path: '/DominioMoeda' }" selectedKeys="{/IdDominioMoedaSelecionadas}" >
										<core:Item key="{id_dominio_moeda}" text="{acronimo} - {nome}" />											
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="L" label="{i18n>ViewRelatorioTipoDeTransacao}">
								<fb:control>
									<MultiComboBox id="selectTypeOfTransaction" selectionChange="onSelectChange"  items="{ path: '/DominioTipoTransacao' }" selectedKeys="{/IdDominioTipoTransacaoSelecionadas}" >
										<core:Item key="{id_dominio_tipo_transacao}" text="{tipo_transacao}"/>																				
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
						</fb:filterItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content  -->
		<f:content>
			<ScrollContainer horizontal="true" vertical="true" height="100%">
				<Table items="{ path: '/ReportTTC', sorter: [{path:'DataPagamento'}] }">
					<columns>
						<Column width="6rem">
							<Text text="{i18n>viewRelatorioEmpresa}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioClassificacao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioCategoria}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioT}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioNomeT}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioJurisdicao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioPais}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioAnoFiscal}" />
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioCurrency}" />
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioTipoDeTransacao}" />
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioDataDePagamento}"/>
						</Column>		
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaProjeto}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaDescription}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaOther}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaPrincipal}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaInterest}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaFine}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaValue}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaNumberDocument}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewTTCDetalheTrimestreColunaBeneficiary}"/>
						</Column>			
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{Empresa}"/>
								<Text text="{DominioTaxClassification}"/>
								<Text text="{TaxCategory}"/>
								<Text text="{Tax}"/>
								<Text text="{NameOfTax}"/>
								<Text text="{DominioJurisdicao}"/>
								<Text text="{DominioPais}"/>
								<Text text="{DominioAnoFiscal}" />
								<Text text="{DominioMoeda}" />
								<Text text="{DominioTipoTransacao}" />
								<Text text="{DataPagamento}"/>
								<Text text="{ProjetoPagamento}"/>
								<Text text="{DescricaoPagamento}"/>
								<Text text="{TipoTransacaoOutrosPagamento}"/>
								<Text text="{PrincipalPagamento}"/>
								<Text text="{JurosPagamento}"/>
								<Text text="{MultaPagamento}" />
								<Text text="{TotalPagamento}" />
								<Text text="{NumeroDocumentoPagamento}" />
								<Text text="{EntidadeBeneficiariaPagamento}"/>							
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</f:content>
	</f:DynamicPage>
</mvc:View>