<mvc:View controllerName="ui5ns.ui5.controller.ttc.Relatorio" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome" />
						<Link text="TTC" press="navToPage2" />
						<Link text="{i18n>viewGeralRelatorio}" enabled="false" />
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<vm:VariantManagement id="myVariantManagement" standardItemText="Relatório TTC" save="onSaveView"></vm:VariantManagement>
				</f:heading>
				<f:actions>
					<Button
						text="{i18n>viewRelatorioImprimir}"
						type="Transparent"
						icon="sap-icon://print" />
					<Button
						text="{i18n>viewRelatorioExportar} CSV"
						type="Transparent"/>
					<Button
						text="{i18n>viewRelatorioExportar} TXT"
						type="Transparent" />
					<Button
						text="{i18n>viewRelatorioExportar} XLS"
						type="Transparent"/>
					<Button
						text="{i18n>viewRelatorioExportar} PDF"
						type="Transparent"/>
				</f:actions>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML" />
				</f:navigationActions>
				<!--<f:navigationActions>
					<Button
						text="Voltar"
						icon="sap-icon://nav-back"
						type="Emphasized" 
						press="onNavBack"/>
				</f:navigationActions>-->
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<f:content>
					<fb:FilterBar reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="false">
						<fb:filterItems>
							<fb:FilterItem name="A" label="{i18n>viewRelatorioEmpresa}">
								<fb:control>
									<MultiComboBox id="selectEmpresa"  change="onSelectChange" items="{ path: '/OpcoesEmpresa' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="{i18n>viewRelatorioClassificacao}">
								<fb:control>
									<MultiComboBox id="selectClassification" change="onSelectChange"  items="{ path: '/OpcoesClassification' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="{i18n>viewRelatorioCategoria}">
								<fb:control>
									<MultiComboBox id="selectCategory" change="onSelectChange"  items="{ path: '/OpcoesCategory' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="Tax">
								<fb:control>
									<MultiComboBox id="selectTax" change="onSelectChange"  items="{ path: '/OpcoesTax' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="{i18n>viewRelatorioNome} of Tax">
								<fb:control>
									<MultiComboBox id="selectNameOfTax" change="onSelectChange"  items="{ path: '/OpcoesNameOfTax' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="F" label="{i18n>viewRelatorioJurisdicao}">
								<fb:control>
									<MultiComboBox id="selectJurisdicao" change="onSelectChange"  items="{ path: '/OpcoesJurisdicao' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="G" label="{i18n>viewRelatorioPais}">
								<fb:control>
									<MultiComboBox id="selectPais" change="onSelectChange"  items="{ path: '/OpcoesPais' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="H" label="{i18n>viewRelatorioAnoFiscal}">
								<fb:control>
									<MultiComboBox id="selectAnoFiscal" change="onSelectChange"  items="{ path: '/OpcoesAnoFiscal' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="I" label="{i18n>ViewRelatorioDataDePagamentoInício}">
								<fb:control>
									<DatePicker/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="J" label="{i18n>ViewRelatorioDataDePagamentoFim}">
								<fb:control>
									<DatePicker/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="K" label="{i18n>ViewRelatorioCurrency}">
								<fb:control>
									<MultiComboBox id="selectCurrency" change="onSelectChange"  items="{ path: '/OpcoesCurrency' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="L" label="{i18n>ViewRelatorioTipoDeTransacao}">
								<fb:control>
									<MultiComboBox id="selectTypeOfTransaction" change="onSelectChange"  items="{ path: '/OpcoesTypeOfTransaction' }">
										<core:Item key="{key}" text="{value}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
						</fb:filterItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<ScrollContainer horizontal="true" vertical="true" height="100%">
				<Table items="{ path: '/Pagamentos' }">
					<columns>
						<Column width="6rem">
							<Text text="{i18n>viewRelatorioEmpresa}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioClassificacao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioCategoria}"/>
						</Column>
						<Column width="10rem">
							<Text text="Tax"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioNome} of Tax"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioNomeDoOrgao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioJurisdicao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioPais}" />
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioEstado}" />
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioCidade}" />
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioAnoFiscal}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioDescricao}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>ViewRelatorioDataDePagamento}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioCurrency}"/>
						</Column>
						<Column width="15rem">
							<Text text="{i18n>ViewRelatorioTipoDeTransacao}"/>
						</Column>
						<Column width="15rem">
							<Text text="{i18n>viewRelatorioOutros}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="Principal"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioInteresse}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioMulta}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioValue}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioNumeroDoDocumento}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioBeneficiarioDaCompanhia}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{empresa}"/>
								<Text text="{classification}"/>
								<Text text="{category}"/>
								<Text text="{tax}"/>
								<Text text="{nameOfTax}"/>
								<Text text="{nameOfGov}"/>
								<Text text="{jurisdicao}"/>
								<Text text="{pais}" />
								<Text text="{state}" />
								<Text text="{city}" />
								<Text text="{anoFiscal}"/>
								<Text text="{description}"/>
								<Text text="{dateOfPayment}"/>
								<Text text="{currency}"/>
								<Text text="{typeOfTransaction}"/>
								<Text text="{otherSpecify}"/>
								<Text text="{principal}"/>
								<Text text="{interest}"/>
								<Text text="{fine}"/>
								<Text text="{value}"/>
								<Text text="{numberOfDocument}"/>
								<Text text="{beneficiaryCompany}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</f:content>
	</f:DynamicPage>
</mvc:View>