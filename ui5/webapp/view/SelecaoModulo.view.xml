			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>viewSelecaoModuloTituloPagina}" />
				</f:heading>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML" />
				</f:navigationActions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox>
