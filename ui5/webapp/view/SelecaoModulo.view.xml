<mvc:View
	controllerName="ui5ns.ui5.controller.SelecaoModulo"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:control="ui5ns.ui5.control"
	xmlns:u="sap.ui.unified"
	xmlns="sap.m"
	class="viewSelecaoModulo">
	<f:DynamicPage class="semContentPadding">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>viewSelecaoModuloTituloPagina}" />
				</f:heading>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML" />
				</f:navigationActions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox>
				<VBox>
					<VBox>
						<HBox>
							<CheckBox 
								text="Declaração" 
								selected="{/IsDeclaracao}" 
								class="sapUiSmallMarginEnd" /> 
							<DatePicker 
								value="{/DataEnvioDeclaracao}" 
								valueFormat="yyyy-MM-dd"
								visible="{= ${/IsDeclaracao} === true ? true : false}" />
						</HBox>
						<HBox>
							<u:FileUploader 
								id="fileUploader" 
								name="myFileUpload" 
								uploadUrl="" 
								width="400px" 
								tooltip="Enviar o arquivo para o Nodejs"
								placeholder="Escolha um arquivo" />
							<Button 
								text="Enviar Arquivo" 
								press="onEnviarArquivo" />
						</HBox>
					</VBox>
					<!--<Panel
						headerText="Documentos"
						expandable="true"
						expanded="true">-->
					<Table 
						inset="false"
						items="{
							path: '/Arquivos',
							sorter: [{
								path: 'nome_arquivo'
							}, {
								path: 'data_upload'
							}]
						}">
						<headerToolbar>
							<Toolbar>
								<Title text="Documentos" />
								<!--<ToolbarSpacer />
								<u:FileUploader 
									id="fileUploader" 
									name="myFileUpload" 
									uploadUrl="" 
									width="400px" 
									tooltip="Enviar o arquivo para o Nodejs" />
								<Button 
									text="Enviar Arquivo" 
									press="onEnviarArquivo" />-->
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Title text="Nome" />
							</Column>
							<Column>
								<Title text="Data Upload" />
							</Column>
							<!--<Column 
								minScreenWidth="2000px"
								demandPopin="true">
								<Title text="Declaração" />
							</Column>
							<Column>
								<Title text="Data Envio Declaração" />
							</Column>-->
							<!--<Column>
								<Title text="Tipo" />
							</Column>
							<Column>
								<Title text="Tamanho" />
							</Column>-->
							<Column width="6.5rem" />
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{nome_arquivo}" text="{label_declaracao}" class="sapMTableContentMargin" />
									<!--<Text text="{nome_arquivo}" />-->
									<ObjectNumber
										number="{data_upload}"/>
									<!---<ObjectNumber
										number="{ind_declaracao_label}" />
									<ObjectNumber
										number="{data_envio_declaracao}" visible="false" />-->
									<!--<ObjectNumber
										number="{mimetype}"/>
									<ObjectNumber
										number="{tamanho}"/>-->
									<HBox>
										<Button icon="sap-icon://download-from-cloud" type="Accept" tooltip="Baixar arquivo" press="onBaixarArquivo" enabled="{btnDownloadEnabled}" class="sapUiSmallMarginEnd" />
										<Button icon="sap-icon://delete" type="Reject" tooltip="Excluir arquivo" press="onExcluirArquivo" enabled="{btnExcluirEnabled}" />
									</HBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<!--</Panel>-->
					<!--<UploadCollection id="UploadCollection" instantUpload="false" />
					<Button id="Button" text="Upload Now" press="onStartUpload" />-->
				</VBox>
				<!--<Table 
					inset="false"
					items="{
						path: '/Periodos'
					}">
					<columns>
						<Column>
							<Title text="Período" />
						</Column>
						<Column>
							<Title text="n1" />
						</Column>
						<Column>
							<Title text="n2" />
						</Column>
						<Column>
							<Title text="n3" />
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{periodo}" />
								<ObjectNumber
									number="{n1}"/>
								<ObjectNumber
									number="{n2}"/>
								<ObjectNumber
									number="{=${n1}+${n2}}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>-->
				<FlexBox
					alignItems="Center"
					justifyContent="End"
					class="sapUiSmallMarginTop">
					<items>
						<VBox
							class="sapUiLargeMarginEnd">
							<Label 
								text="{i18n>viewSelecaoModuloComboboxIdioma}"/>
							<Select
								id="selectIdioma"
								change="onTrocarIdioma">
								<items>
									<core:Item text="{i18n>viewSelecaoModuloComboboxLinguaOpcaoIngles}" key="en-US"/>
									<core:Item text="{i18n>viewSelecaoModuloComboboxLinguaOpcaoPortugues}" key="pt-BR"/>
								</items>
							</Select>
						</VBox>
					</items>
				</FlexBox>
				<Panel
					backgroundDesign="Transparent"	 
					expandable="False"
					class="painelModulos">
					<GenericTile 
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>viewSelecaoModuloBotaoTTC}"
						press="navToTTC">
						<TileContent>
							<ImageContent src="sap-icon://home-share" />
						</TileContent>
					</GenericTile>
					<GenericTile 
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>viewSelecaoModuloBotaoTaxPackage}"
						press="navToTaxPackage">
						<TileContent>
							<ImageContent src="sap-icon://home-share" />
						</TileContent>
					</GenericTile>
					<GenericTile 
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>viewSelecaoModuloBotaoCompliance}"
						press="navToCompliance">
						<TileContent>
							<ImageContent src="sap-icon://home-share" />
						</TileContent>
					</GenericTile>
					<GenericTile 
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>viewSelecaoModuloBotaoBeps}"
						press="navToBeps">
						<TileContent>
							<ImageContent src="sap-icon://home-share" />
						</TileContent>
					</GenericTile>
					<GenericTile 
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="Admin"
						press="navToAdmin">
						<TileContent>
							<ImageContent src="sap-icon://home-share" />
						</TileContent>
					</GenericTile>
				</Panel>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>