<mvc:View
	controllerName="ui5ns.ui5.controller.admin.CadastroObrigacoesComplianceBeps"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:table="sap.ui.table"
	xmlns="sap.m">
	<NavContainer id="myNav" class="fixNavContainer">
		<Page
			id="paginaListagem"
			showHeader="false"
			visible="true">
			<Table
				id="tabelaObjetos"
				items="{
					path: '/objetos',
					sorter: [{
						path: 'tipo',
						group: true
					}, {
						path: 'nome'
					}]
				}"
				growing="true"
				enableBusyIndicator="true"
				growingScrollToLoad="true"
				updateFinished="onTerminouAtualizar">
		
				<headerToolbar>
					<Toolbar>
						<Title 
							id="cabecalhoTabelaObjetos" 
							text="{i18n>formularioObrigacaoTituloObrigacao}"/>
						<ToolbarSpacer />
						<Button 
							id="botaoNovoObjeto" 
							icon="sap-icon://add" 
							press="onNovoObjeto" 
							text="novo"
							type="Emphasized"/>
					</Toolbar>
				</headerToolbar>
		
				<columns>
					<Column vAlign="Middle">
						<Text text="Nome" />
					</Column>
					<Column vAlign="Middle">
						<Text text="Pais" />
					</Column>					
					<Column width="100px"></Column>
				</columns>
		
				<items>
					<ColumnListItem
						type="Navigation"
						press="onAbrirObjeto">
						<cells>
							<ObjectIdentifier text="{tblModeloObrigacao.nome_obrigacao}"/>
							<ObjectIdentifier text="{tblDominioPais.pais}"/>							
							<HBox>
								<!--<Button icon="sap-icon://status-inactive" type="Ghost" tooltip="Desabilitar" class="sapUiSmallMarginEnd" press="onDesabilitar" />-->
								<Button icon="sap-icon://delete" type="Reject" tooltip="Excluir" press="onExcluir" />
							</HBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</Page>
		<Page
			id="paginaObjeto"
			showHeader="false">
			<content>
				<VBox class="sapUiSmallMargin">
					<f:Form 
						id="formularioObjeto" 
						editable="true">
						<f:title>
							<core:Title text="{i18n>formularioObrigacaoTituloObrigacao}"/>
						</f:title>
						<f:layout>
							<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
								emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer title="{i18n>viewGeralCadastro}">
								<f:formElements>
									<f:FormElement label="{i18n>viewGeralTipo}">
										<f:label>
											<Label text="{i18n>viewGeralTipo}" class="sapMLabelRequired" />
										</f:label>
										<f:fields>
											<Select id="selectStatus" selectedKey="{/objeto/fkDominioObrigacaoAcessoriaTipo}" items="{/DominioObrigacaoAcessoriaTipo}">
												<core:Item text="{tipo}" key="{id_dominio_obrigacao_acessoria_tipo}" />
											</Select>
										</f:fields>
									</f:FormElement>									
									<f:FormElement>
										<f:label>
											<Label text="{i18n>viewGeralNome}" labelFor="inputNome" />
										</f:label>
										<f:fields>
											<Input type="Text" id="inputNome" value="{/objeto/nome}" required="true" />
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>viewGeralPais}">
										<f:label>
											<Label text="{i18n>viewGeralPais}" class="sapMLabelRequired" />
										</f:label>
										<f:fields>
											<Select id="selectPais" selectedKey="{/objeto/selectPais}" items="{/Pais}">
												<core:Item text="{nomePais}" key="{id}" />
											</Select>
										</f:fields>
									</f:FormElement>									
									<f:FormElement>
										<f:label>
											<Label text="{i18n>ViewGeralDataInÃ­cio} {/displayFormatFull}" labelFor="dataInicio" />
										</f:label>
										<f:fields>
											<DatePicker id="dataInicio" displayFormat="{/displayFormatFull}" valueFormat="yyyy-MM-dd" value="{/objeto/dataInicio}" required="true" />
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="{i18n>ViewGeralDataFim} {/displayFormatFull}" labelFor="dataFim" />
										</f:label>
										<f:fields>
											<DatePicker id="dataFim" displayFormat="{/displayFormatFull}" valueFormat="yyyy-MM-dd" value="{/objeto/dataFim}" required="true" />
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>formularioObrigacaoLabelPeriodicidade}">
										<f:label>
											<Label text="{i18n>formularioObrigacaoLabelPeriodicidade}" class="sapMLabelRequired" />
										</f:label>
										<f:fields>
											<Select id="selectPeriodicidade" selectedKey="{/objeto/selectPeriodicidade}" items="{/DomPeriodicidadeObrigacao}">
												<core:Item text="{descricao}" key="{id_periodicidade_obrigacao}" />
											</Select>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="{i18n>formularioObrigacaoLabelPrazoEntrega} {/displayFormatSemAno}" labelFor="dataFim"/>
										</f:label>
										<f:fields>
											<DatePicker id="selectPrazoEntrega" displayFormat="{/displayFormatSemAno}" valueFormat="yyyy-MM-dd" value="{/objeto/selectPrazoEntrega}" required="true" />
											<!--<DateTimeInput id="selectPrazoEntrega" type="Date" value="{/objeto/selectPrazoEntrega}" displayFormat="dd/MM" />													-->
										</f:fields>
									</f:FormElement>									
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</VBox>
			</content>
			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button 
					id="btnSalvarOC"
						text="{i18n>formularioObrigacaoBotaoSalvar}" 
						type="Accept" 
						press="onSalvar"/>
					<Button 
				    	id="btnOCCancelar"
						text="{i18n>formularioObrigacaoBotaoCancelar}" 
						type="Reject" 
						press="onCancelar"/>
				</Toolbar>
			</footer>
		</Page>
	</NavContainer>
</mvc:View>