<mvc:View controllerName="ui5ns.ui5.controller.compliance.ListagemRequisicoes" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns="sap.m">
	<f:DynamicPage>
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome"/>
						<Link text="{i18n>viewListagemRequisicoesListagemObrigações}" press="navToPage1"/>
						<Link text="{i18n>viewListagemRequisicoesListagemdeRequisiçãodeObrigações}" enabled="false"/>
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<Title text="{i18n>viewListagemRequisicoesTitulo}"/>
				</f:heading>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML"/>
				</f:navigationActions>
				<f:expandedContent>
					<ObjectIdentifier title="Vale"/>
				</f:expandedContent>
			</f:DynamicPageTitle>
		</f:title>
