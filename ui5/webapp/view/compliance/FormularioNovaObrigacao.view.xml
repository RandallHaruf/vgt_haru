<mvc:View 
	controllerName="ui5ns.ui5.controller.compliance.FormularioNovaObrigacao" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:f2="sap.f"
	xmlns="sap.m" 
	class="viewComplianceFormularioNovaObrigacao">
	<f2:DynamicPage title="{i18n>viewComplianceFormularioNovaObrigacaoTituloPagina}" showFooter="true">
		<f2:title>
			<f2:DynamicPageTitle>
				<f2:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" enabled="false" />
						<Link text="Listagem Obrigações" enabled="false" />
						<Link text="Formulário Nova Obrigação" enabled="false" />
					</Breadcrumbs>
				</f2:breadcrumbs>
				<f2:heading>
					<Title text="Compliance - Formulário de Cadastro de Obrigação"/>
				</f2:heading>
			</f2:DynamicPageTitle>
		</f2:title>
		<f2:content>
			<VBox class="sapUiSmallMargin">
				<f:Form 
					id="formularioObrigacao" 
					editable="true">
					<f:title>
						<core:Title text="Nova Obrigação"/>
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
							emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="{i18n>formularioObrigacaoLabelEmpresa}">
									<f:fields>
										<Select id="selectEmpresas" items="{/Empresa}" selectedKey="{/Obrigacao/fkEmpresa}">
											<core:Item text="{nome}" key="{id_empresa}" />
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelPais}">
									<f:fields>
										<ComboBox items="{/DominioPais}" selectedKey="{/Obrigacao/fkDominioPais}">
											<core:Item text="{pais}" key="{id_dominio_pais}" />
										</ComboBox>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelTipo}">
									<f:fields>
										<Select items="{/ObrigacaoAcessoria}" selectedKey="{/Obrigacao/fkObrigacaoAcessoria}">
											<core:Item text="{nome}" key="{id_obrigacao_acessoria}" />
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelPeriodicidade}">
									<f:fields>
										<Select items="{/DomPeriodicidadeObrigacao}" selectedKey="{/Obrigacao/fkDominioPeriocidadeObrigacao}">
											<core:Item text="{descricao}" key="{id_periodicidade_obrigacao}" />
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelAnoFiscal}">
									<f:fields>
										<Select items="{/DominioAnoFiscal}" selectedKey="{/Obrigacao/fkAnoFiscal}">
											<core:Item text="{ano_fiscal}" key="{id_dominio_ano_fiscal}" />
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelPrazoEntrega}">
									<f:fields>
										<DatePicker 
											value="{/Obrigacao/prazo_entrega}"
											valueFormat="yyyy-MM-dd"
											id="datepickerPrazoEntrega" 
											placeholder="{i18n>placeholderDatepicker}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelExtensao}">
									<f:fields>
										<DatePicker 
											value="{/Obrigacao/extensao}"
											valueFormat="yyyy-MM-dd"
											id="datepickerExtensao" 
											placeholder="{i18n>placeholderDatepicker}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelObrigacaoIniciada}">
									<f:fields>
										<CheckBox id="checkObrigacaoIniciada" selected="{/Obrigacao/obrigacao_inicial}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Suporte Contratado">
									<f:fields>
										<CheckBox id="checkSuporteContratado" selected="{/Obrigacao/suporte_contratado}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelSuporte}">
									<f:fields>
										<TextArea 
											value="{/Obrigacao/suporte}"
											id="textAreaSuporte"
											rows="5" 
											enabled="{= ${/Obrigacao/suporte_contratado} ? true : false}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelObservacoes}">
									<f:fields>
										<TextArea 
											value="{/Obrigacao/observacoes}"
											id="textAreaObservacoes" 
											rows="5"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</f2:content>
		<f2:footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button 
					text="{i18n>formularioObrigacaoBotaoSalvar}" 
					type="Accept" 
					press="onSalvar"/>
				<Button 
					text="{i18n>formularioObrigacaoBotaoCancelar}" 
					type="Reject" 
					press="onCancelar"/>
			</Toolbar>
		</f2:footer>
	</f2:DynamicPage>
</mvc:View>