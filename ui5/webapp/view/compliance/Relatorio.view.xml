<mvc:View controllerName="ui5ns.ui5.controller.compliance.Relatorio" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome" />
						<Link text="Listagem Obrigações" press="navToPage2" />
						<Link text="Relatório" enabled="false" />
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<vm:VariantManagement id="myVariantManagement" standardItemText="Relatório Compliance" save="onSaveView"></vm:VariantManagement>
				</f:heading>
				<f:actions>
					<Button
							text="{i18n>viewRelatorioImprimir}"
							type="Transparent"
							icon="sap-icon://print" />
					<Button
							text="{i18n>viewRelatorioExportar} CSV"
							type="Transparent"/>
					<Button
							text="{i18n>viewRelatorioExportar} TXT"
							type="Transparent" />
					<Button
							text="{i18n>viewRelatorioExportar} XLS"
							type="Transparent"/>
					<Button
							text="{i18n>viewRelatorioExportar} PDF"
							type="Transparent"/>
				</f:actions>
				<!--<f:navigationActions>
					<Button
						text="Voltar"
						icon="sap-icon://nav-back"
						type="Emphasized" 
						press="onNavBack"/>
				</f:navigationActions>-->
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<fb:FilterBar reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="false">
						<fb:filterItems>
							<fb:FilterItem name="J" label="{i18n>viewComplianceListagemObrigacoesColunaTipo}">
								<fb:control>
									<MultiComboBox id="selectDominio" selectionChange="onSelectChange" items="{ path: '/DominioObrigacaoAcessoriaTipo' }" selectedKeys="{/IdDominioObrigacaoAcessoriaTipoSelecionadas}">
										<core:Item key="{id_dominio_obrigacao_acessoria_tipo}" text="{tipo}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>							
							<fb:FilterItem name="A" label="{i18n>viewRelatorioEmpresa}">
								<fb:control>
									<MultiComboBox id="selectEmpresa"  selectionChange="onSelectChange" items="{ path: '/Empresa' }" selectedKeys="{/IdEmpresasSelecionadas}">
										<core:Item key="{id_empresa}" text="{nome}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="{i18n>viewComplianceListagemObrigacoesColunaPais}">
								<fb:control>
									<MultiComboBox id="selectPais" selectionChange="onSelectChange" items="{ path: '/DominioPais' }" selectedKeys="{/IdDominioPaisSelecionadas}">
										<core:Item key="{id_dominio_pais}" text="{pais}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="{i18n>viewComplianceFormularioDetalhesObrigacaoListagemObrigações}">
								<fb:control>
									<MultiComboBox id="selectTipo" selectionChange="onSelectChange" items="{ path: '/ObrigacaoAcessoria' }" selectedKeys="{/IdObrigacaoAcessoriaSelecionadas}">
										<core:Item key="{id_obrigacao_acessoria}" text="{nome}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="{i18n>viewComplianceListagemObrigacoesColunaPeriodicidade}">
								<fb:control>
									<MultiComboBox id="selectPeriodicidade" selectionChange="onSelectChange" items="{ path: '/DomPeriodicidadeObrigacao' }" selectedKeys="{/IdDomPeriodicidadeObrigacaoSelecionadas}">
										<core:Item key="{id_periodicidade_obrigacao}" text="{descricao}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="{i18n>viewComplianceListagemObrigacoesColunaAnoFiscal}">
								<fb:control>
									<MultiComboBox id="selectAnoFiscal" selectionChange="onSelectChange" items="{ path: '/DominioAnoFiscal' }" selectedKeys="{/IdDominioAnoFiscalSelecionadas}">
										<core:Item key="{id_dominio_ano_fiscal}" text="{ano_fiscal}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="F" label="{i18n>viewComplianceListagemObrigacoesColunaPrazoEntrega}">
								<fb:control>
									<DateRangeSelection	id="PrazoEntrega" dateValue="{/DataPrazoEntregaInicio}"	secondDateValue="{/DataPrazoEntregaFim}" 
									displayFormat="yyyy-MM-dd" delimiter="{i18n>viewGeralAte}" change="onSelectChange"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="G" label="{i18n>viewComplianceListagemObrigacoesColunaExtensao}">
								<fb:control>
									<DateRangeSelection	id="Extensao" dateValue="{/DataExtensaoInicio}"	secondDateValue="{/DataExtensaoFim}" 
									displayFormat="yyyy-MM-dd" delimiter="{i18n>viewGeralAte}" change="onSelectChange"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="K" label="{i18n>viewComplianceListagemObrigacoesColunaStatus}">
								<fb:control>
									<MultiComboBox id="selectStatus" selectionChange="onSelectChange" items="{ path: '/DominioStatusObrigacao' }" selectedKeys="{/IdDominioStatusObrigacaoSelecionadas}">
										<core:Item key="{id_status_obrigacao}" text="{descricao}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="H" label="{i18n>formularioObrigacaoLabelObrigacaoIniciada}">
								<fb:control>
									<ComboBox items="{path: '/ObrigacaoIniciada'}" selectionChange="onSelectChange" selectedKey="{/CheckObrigacaoInicial}">
										<core:Item key="{key}" text="{value}" />
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="I" label="{i18n>viewFormularioNovaObrigacaoSC}">
								<fb:control>
									<ComboBox items="{path: '/SuporteContratado'}" selectionChange="onSelectChange" selectedKey="{/CheckSuporteContratado}">
										<core:Item key="{key}" text="{value}" />
									</ComboBox>
								</fb:control>
							</fb:FilterItem>							
						</fb:filterItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<ScrollContainer horizontal="true" vertical="true" height="100%">
				<Table items="{ path: '/ReportObrigacao', sorter: [{path:'nome'}] }" >
					<columns>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesTextoFiltro1}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesSelectEmpresas}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaPais}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewEmpresasObrigacoesAcessorias}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaPeriodicidade}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaAnoFiscal}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaPrazoEntrega}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaExtensao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaStatus}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesBotaoRequisicao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaSuporteContratado}"/>
						</Column>
						<Column width="15rem">
							<Text text="{i18n>ViewRelatorioTipoDeTransacao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioAnoFiscal}"/>
						</Column>						
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{tipo}"/>
								<Text text="{nome}"/>
								<Text text="{pais}"/>
								<Text text="{TBLOBRIGACAOACESSORIANOME}"/>
								<Text text="{descricao}"/>
								<Text text="{ano_fiscal}"/>
								<Text text="{prazo_entrega}"/>
								<Text text="{extensao}"/>
								<Text text="{TBLSTATUSOBRIGACAODESCRICAO}"/>
								<Text text="{= ${obrigacao_inicial} === 1 ? ${i18n>viewGeralSim} : ${i18n>viewGeralNao}}" />
								<Text text="{= ${suporte_contratado} === 1 ? ${i18n>viewGeralSim} : ${i18n>viewGeralNao}}"/>
								<Text text="{suporte}"/>
								<Text text="{observacoes}"/>								
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</f:content>
	</f:DynamicPage>
</mvc:View>