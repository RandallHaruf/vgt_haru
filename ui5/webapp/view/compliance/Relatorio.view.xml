<mvc:View controllerName="ui5ns.ui5.controller.compliance.Relatorio" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome" />
						<Link text="Listagem Obrigações" press="navToPage2" />
						<Link text="Relatório" enabled="false" />
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<vm:VariantManagement id="myVariantManagement" standardItemText="Relatório Compliance" save="onSaveView"></vm:VariantManagement>
				</f:heading>
				<f:actions>
					<Button
							text="{i18n>viewRelatorioImprimir}"
							type="Transparent"
							icon="sap-icon://print" />
					<Button
							text="{i18n>viewRelatorioExportar} CSV"
							type="Transparent"/>
					<Button
							text="{i18n>viewRelatorioExportar} TXT"
							type="Transparent" />
					<Button
							text="{i18n>viewRelatorioExportar} XLS"
							type="Transparent"/>
					<Button
							text="{i18n>viewRelatorioExportar} PDF"
							type="Transparent"/>
				</f:actions>
				<!--<f:navigationActions>
					<Button
						text="Voltar"
						icon="sap-icon://nav-back"
						type="Emphasized" 
						press="onNavBack"/>
				</f:navigationActions>-->
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<fb:FilterBar reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="false">
						<fb:filterItems>
							<fb:FilterItem name="J" label="{i18n>viewComplianceListagemObrigacoesColunaTipo}">
								<fb:control>
									<Select id="selectDominio" forceSelection="true" change="onSelectChange" items="{ path: '/DominioObrigacao' }">
										<core:Item key="{aaa}" text="{nome}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>							
							<fb:FilterItem name="A" label="{i18n>viewRelatorioEmpresa}">
								<fb:control>
									<Select id="selectEmpresa" forceSelection="true" change="onSelectChange" items="{ path: '/Empresa' }">
										<core:Item key="{id_empresa}" text="{nome}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="{i18n>viewComplianceListagemObrigacoesColunaPais}">
								<fb:control>
									<Select id="selectPais" change="onSelectChange" forceSelection="true" items="{ path: '/DominioPais' }">
										<core:Item key="{id_dominio_pais}" text="{pais}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="{i18n>viewComplianceFormularioDetalhesObrigacaoListagemObrigações}">
								<fb:control>
									<Select id="selectTipo" change="onSelectChange" forceSelection="true" items="{ path: '/DominioObrigacaoAcessoria' }">
										<core:Item key="{id_obrigacao_acessoria}" text="{nome}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="{i18n>viewComplianceListagemObrigacoesColunaPeriodicidade}">
								<fb:control>
									<Select id="selectPeriodicidade" change="onSelectChange" forceSelection="true" items="{ path: '/DominioPeriodicidadeObrigacao' }">
										<core:Item key="{id_periodicidade_obrigacao}" text="{descricao}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="{i18n>viewComplianceListagemObrigacoesColunaAnoFiscal}">
								<fb:control>
									<Select id="selectAnoFiscal" change="onSelectChange" forceSelection="true" items="{ path: '/DominioAnoFiscal' }">
										<core:Item key="{id_dominio_ano_fiscal}" text="{ano_fiscal}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="F" label="{i18n>viewComplianceListagemObrigacoesColunaPrazoEntrega}">
								<fb:control>
									<DatePicker value="{/DataPrazoEntrega}" valueFormat="yyyy-MM-dd" change="onSelectChange"/>
								</fb:control>
							</fb:FilterItem>							
							<fb:FilterItem name="G" label="{i18n>viewComplianceListagemObrigacoesColunaExtensao}">
								<fb:control>
									<DatePicker value="{/DataExtensao}" valueFormat="yyyy-MM-dd" change="onSelectChange"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="K" label="{i18n>viewComplianceListagemObrigacoesColunaStatus}">
								<fb:control>
									<Select id="selectStatus" change="onSelectChange" forceSelection="true" items="{ path: '/DominioObrigacaoStatus' }">
										<core:Item key="{xxxx}" text="{xxxx}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>							
							<fb:FilterItem name="H" label="{i18n>formularioObrigacaoLabelObrigacaoIniciada}">
								<fb:control>
									<CheckBox text="" selected="{/CheckObrigacao}" select="onSelectChange" />
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="I" label="{i18n>viewFormularioNovaObrigacaoSC}">
								<fb:control>
									<CheckBox text="" selected="{/CheckSuporteContratado}" select="onSelectChange" />
								</fb:control>
							</fb:FilterItem>
						</fb:filterItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<ScrollContainer horizontal="true" vertical="true" height="100%">
				<Table items="{ path: '/Pagamentos' }">
					<columns>
						<Column width="6rem">
							<Text text="{i18n>viewRelatorioEmpresa}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioClassificacao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioCategoria}"/>
						</Column>
						<Column width="10rem">
							<Text text="Tax"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioNomeT}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioNomeDoOrgao}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioJurisdicao}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioAnoFiscal}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioDescricao}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>ViewRelatorioDataDePagamento}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>ViewRelatorioCurrency}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioTaxadecambio}"/>
						</Column>
						<Column width="15rem">
							<Text text="{i18n>ViewRelatorioTipoDeTransacao}"/>
						</Column>
						<Column width="15rem">
							<Text text="{i18n>viewRelatorioOutros}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="Principal"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioInteresse}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioMulta}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioValue}"/>
						</Column>
						<Column width="10rem" hAlign="End">
							<Text text="{i18n>viewRelatorioValue} USD"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioNumeroDoDocumento}"/>
						</Column>
						<Column width="10rem">
							<Text text="{i18n>viewRelatorioBeneficiarioDaCompanhia}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{empresa}"/>
								<Text text="{classification}"/>
								<Text text="{category}"/>
								<Text text="{tax}"/>
								<Text text="{nameOfTax}"/>
								<Text text="{nameOfGov}"/>
								<Text text="{jurisdicao}"/>
								<Text text="{anoFiscal}"/>
								<Text text="{description}"/>
								<Text text="{dateOfPayment}"/>
								<Text text="{currency}"/>
								<Text text="{currencyRate}"/>
								<Text text="{typeOfTransaction}"/>
								<Text text="{otherSpecify}"/>
								<Text text="{principal}"/>
								<Text text="{interest}"/>
								<Text text="{fine}"/>
								<Text text="{value}"/>
								<Text text="{valueUSD}"/>
								<Text text="{numberOfDocument}"/>
								<Text text="{beneficiaryCompany}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</f:content>
	</f:DynamicPage>
</mvc:View>