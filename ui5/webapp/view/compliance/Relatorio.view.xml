<mvc:View controllerName="ui5ns.ui5.controller.compliance.Relatorio" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" press="navToHome" />
						<!--<Link text="Listagem Obrigações" press="navToPage2" />-->
						<Link text="Relatório" enabled="false" />
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:heading>
					<vm:VariantManagement id="myVariantManagement" standardItemText="Relatório Compliance/Beps" save="onSaveView"></vm:VariantManagement>
				</f:heading>
				<f:actions>
					<!--<Button
							text="{i18n>viewRelatorioImprimir}"
							type="Transparent"
							icon="sap-icon://print" 
							press="onImprimir"/>-->
					<Button
							text="{i18n>viewRelatorioExportar} CSV"
							type="Transparent"
							press="onDataExportCSV"/>
					<!--<Button
							text="{i18n>viewRelatorioExportar} TXT"
							type="Transparent" 
							press="onDataExportTXT"/>-->
					<Button
							text="{i18n>viewRelatorioExportar} XLS"
							type="Transparent"
							press="onDataExportCSV"/>
					<!--<Button
							text="{i18n>viewRelatorioExportar} PDF"
							type="Transparent"/>-->
				</f:actions>
				<f:navigationActions>
					<core:Fragment fragmentName="ui5ns.ui5.view.AcessoRapido" type="XML"/>
				</f:navigationActions>				
				<!--<f:navigationActions>
					<Button
						text="Voltar"
						icon="sap-icon://nav-back"
						type="Emphasized" 
						press="onNavBack"/>
				</f:navigationActions>-->
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<fb:FilterBar reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="false">
						<fb:filterItems>
							<fb:FilterItem name="J" label="{i18n>viewComplianceListagemObrigacoesColunaTipo}">
								<fb:control>
									<MultiComboBox id="selectDominio" selectionFinish="onSelectChange" items="{ path: '/DominioObrigacaoAcessoriaTipo' }" selectedKeys="{/IdDominioObrigacaoAcessoriaTipoSelecionadas}">
										<core:Item key="{tblDominioObrigacaoAcessoriaTipo.id_dominio_obrigacao_acessoria_tipo}" text="{tblDominioObrigacaoAcessoriaTipo.tipo}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>							
							<fb:FilterItem name="A" label="{i18n>viewRelatorioEmpresa}">
								<fb:control>
									<MultiComboBox id="selectEmpresa"  selectionFinish="onSelectChange" items="{ path: '/Empresa' }" selectedKeys="{/IdEmpresasSelecionadas}">
										<core:Item key="{tblEmpresa.id_empresa}" text="{tblEmpresa.nome}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="{i18n>viewComplianceListagemObrigacoesColunaPais}">
								<fb:control>
									<MultiComboBox id="selectPais" selectionFinish="onSelectChange" items="{ path: '/DominioPais' }" selectedKeys="{/IdDominioPaisSelecionadas}">
										<core:Item key="{tblDominioPais.id_dominio_pais}" text="{tblDominioPais.pais}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="{i18n>viewComplianceFormularioDetalhesObrigacaoListagemObrigações}">
								<fb:control>
									<MultiComboBox id="selectTipo" selectionFinish="onSelectChange" items="{ path: '/ObrigacaoAcessoria' }" selectedKeys="{/IdObrigacaoAcessoriaSelecionadas}">
										<core:Item key="{tblObrigacaoAcessoria.id_obrigacao_acessoria}" text="{tblObrigacaoAcessoria.nome}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="{i18n>viewComplianceListagemObrigacoesColunaPeriodicidade}">
								<fb:control>
									<MultiComboBox id="selectPeriodicidade" selectionFinish="onSelectChange" items="{ path: '/DomPeriodicidadeObrigacao' }" selectedKeys="{/IdDomPeriodicidadeObrigacaoSelecionadas}">
										<core:Item key="{tblDominioPeriodicidadeObrigacao.id_periodicidade_obrigacao}" text="{tblDominioPeriodicidadeObrigacao.descricao}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="{i18n>viewComplianceListagemObrigacoesColunaAnoFiscal}">
								<fb:control>
									<MultiComboBox id="selectAnoFiscal" selectionFinish="onSelectChange" items="{ path: '/DominioAnoFiscal' }" selectedKeys="{/IdDominioAnoFiscalSelecionadas}">
										<core:Item key="{tblDominioAnoFiscal.id_dominio_ano_fiscal}" text="{tblDominioAnoFiscal.ano_fiscal}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="F" label="{i18n>viewComplianceListagemObrigacoesColunaPrazoEntrega}">
								<fb:control>
									<DateRangeSelection	id="PrazoEntrega" dateValue="{/DataPrazoEntregaInicio}"	secondDateValue="{/DataPrazoEntregaFim}" 
									displayFormat="dd/MM/yyyy" delimiter="{i18n>viewGeralAte}" change="onSelectChange" minDate="{/ObrigacaoPrazoMin}" maxDate="{/ObrigacaoPrazoMax}"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="G" label="{i18n>viewComplianceListagemObrigacoesColunaExtensao}">
								<fb:control>
									<DateRangeSelection	id="Extensao" dateValue="{/DataExtensaoInicio}"	secondDateValue="{/DataExtensaoFim}" 
									displayFormat="dd/MM/yyyy" delimiter="{i18n>viewGeralAte}" change="onSelectChange" minDate="{/ObrigacaoExtensaoMin}" maxDate="{/ObrigacaoExtensaoMax}"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="K" label="{i18n>viewComplianceListagemObrigacoesColunaStatus}">
								<fb:control>
									<MultiComboBox id="selectStatus" selectionFinish="onSelectChange" items="{ path: '/DominioStatusObrigacao' }" selectedKeys="{/IdDominioStatusObrigacaoSelecionadas}">
										<core:Item key="{tblDominioStatusObrigacao.id_status_obrigacao}" text="{tblDominioStatusObrigacao.descricao}"/>
									</MultiComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="H" label="{i18n>formularioObrigacaoLabelObrigacaoIniciada}">
								<fb:control>
									<ComboBox items="{path: '/ObrigacaoIniciada'}" selectionChange="onSelectChange" selectedKey="{/CheckObrigacaoInicial}">
										<core:Item key="{key}" text="{value}" />
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="I" label="{i18n>viewFormularioNovaObrigacaoSC}">
								<fb:control>
									<ComboBox items="{path: '/SuporteContratado'}" selectionChange="onSelectChange" selectedKey="{/CheckSuporteContratado}">
										<core:Item key="{key}" text="{value}" />
									</ComboBox>
								</fb:control>
							</fb:FilterItem>							
						</fb:filterItems>
					</fb:FilterBar>
					<HBox justifyContent="End" class="sapUiSmallMarginEnd">
					<Button
					text="Gerar {i18n>viewGeralRelatorio}"
					type="Emphasized"
					press="onGerarRelatorio"/>	
					</HBox>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<ScrollContainer horizontal="true" vertical="true" height="100%">
				<Table items="{ path: '/ReportObrigacao', sorter: [{path:'nome'}] }" >
					<columns>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesTextoFiltro1}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesSelectEmpresas}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaPais}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewEmpresasObrigacoesAcessorias}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaPeriodicidade}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaAnoFiscal}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaPrazoEntrega}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaExtensao}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaStatus}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>viewComplianceListagemObrigacoesColunaSuporteContratado}"/>
						</Column>
						<Column width="6rem">
							<Text text="{i18n>formularioObrigacaoLabelValorSuporte}"/>
						</Column>
						<Column width="15rem">
							<Text text="{i18n>formularioObrigacaoLabelObservacoes}"/>
						</Column>
						<Column width="15rem">
							<Text text="{i18n>viewGeralAnoCalendario}"/>
						</Column>						
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{tblDominioObrigacaoAcessoriaTipo.tipo}"/>
								<Text text="{tblEmpresa.nome}"/>
								<Text text="{tblDominioPais.pais}"/>
								<Text text="{tblModeloObrigacao.nome_obrigacao}"/>
								<Text text="{tblDominioPeriodicidadeObrigacao.descricao}"/>
								<Text text="{tblDominioAnoFiscal.ano_fiscal}"/>
								<Text text="{prazo_de_entrega_calculado}"/>
								<Text text="{tblRespostaObrigacao.data_extensao}"/>
								<!--<Text text="{tblDominioStatusObrigacao.descricao}"/>
								<Text text="{= ${obrigacao_inicial} === 1 ? ${i18n>viewGeralSim} : ${i18n>viewGeralNao}}" />
								<Text text="{= ${suporte_contratado} === 1 ? ${i18n>viewGeralSim} : ${i18n>viewGeralNao}}"/>-->
								<Text text="{tblDominioObrigacaoStatus.descricao_obrigacao_status}" />
								<Text text="{tblRespostaObrigacao.suporte_contratado}"/>								
								<Text text="{tblRespostaObrigacao.suporte_valor}"/>
								<Text text="{tblRespostaObrigacao.suporte_especificacao}"/>		
								<Text text="{tblDominioAnoCalendario.ano_calendario}"/>	
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</f:content>
	</f:DynamicPage>
</mvc:View>