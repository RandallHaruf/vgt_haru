<mvc:View
	controllerName="ui5ns.ui5.controller.compliance.FormularioDetalhesObrigacao"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form"
	xmlns:f2="sap.f"
	xmlns="sap.m" 
	class="viewComplianceFormularioDetalhesObrigacao"
	xmlns:u="sap.ui.unified">
	<f2:DynamicPage title="{i18n>viewComplianceFormularioDetalhesObrigacaoTituloPagina}" showFooter="true">
		<f2:title>
			<f2:DynamicPageTitle>
				<f2:breadcrumbs>
					<Breadcrumbs>
						<Link text="Home" enabled="false" />
						<Link text="{i18n>ViewFormularioListagemObrigacoes}" enabled="false" />
						<Link text="{i18n>viewFormularioComplianceComplianceFormulariodeDetalhedeObrigacao}" enabled="false" />
					</Breadcrumbs>
				</f2:breadcrumbs>
				<f2:heading>
					<Title text="{i18n>viewFormularioComplianceComplianceFormulariodeDetalhedeObrigacao}"/>
				</f2:heading>
			</f2:DynamicPageTitle>
		</f2:title>
		<f2:header>
			<f2:DynamicPageHeader pinnable="false">
				<f2:content>
					<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
						<items>
							<Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
								<content>
									<l:VerticalLayout>
										<l:HorizontalLayout allowWrapping="true" class="sapUiSmallMarginBottom">
											<ObjectAttribute title="{i18n>viewGeralEmpresa}" text="{/RespostaObrigacao/nome}"/>
										</l:HorizontalLayout>
										<l:HorizontalLayout allowWrapping="true">
											<l:VerticalLayout>
												<ObjectAttribute title="{i18n>viewComplianceListagemObrigacoesSelectAnoCalendario}" text="{/RespostaObrigacao/ano_calendario}"/>
											</l:VerticalLayout>
										</l:HorizontalLayout>
									</l:VerticalLayout>
								</content>
							</Panel>
						</items>
					</FlexBox>
				</f2:content>
			</f2:DynamicPageHeader>
		</f2:header>
		<f2:content>
			<VBox class="sapUiSmallMargin">
				<f:Form id="formularioObrigacao" 
					editable="true">
					<f:title>
						<!--<core:Title text="{i18n>formularioObrigacaoTituloObrigacao}"/>-->
						<core:Title text="{/RespostaObrigacao/nome_obrigacao}"/>
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
							emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<!--<f:FormElement label="{i18n>ViewGeralDataInÃ­cio}">
									<f:fields>
										<DatePicker 
												placeholder="{i18n>viewGeralInsiraUmaData}" 
												valueFormat="yyyy-MM-dd" 
												value="{/RespostaObrigacao/data_inicial}" 
												enabled="false"
												/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>ViewGeralDataFim}">
									<f:fields>
										<DatePicker 
												placeholder="{i18n>viewGeralInsiraUmaData}" 
												valueFormat="yyyy-MM-dd" 
												value="{/RespostaObrigacao/data_final}" 
												enabled="false"
												/>
									</f:fields>
								</f:FormElement>-->
								<f:FormElement label="{i18n>formularioObrigacaoLabelDataConclusao}" visible="{= ${/JaDataObrigacaoConcluida} ? false : true }">
									<f:fields>
										<DatePicker 
											placeholder="{i18n>viewGeralInsiraUmaData}" 
											valueFormat="yyyy-MM-dd" 
											value="{/RespostaObrigacao/data_conclusao}" 
											enabled="false"
											/>
										<!--<Label text="{/RespostaObrigacao/ano_calendario}"/>-->
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelPrazoEntrega}">
									<f:fields>
										<DatePicker 
												placeholder="{i18n>viewGeralInsiraUmaData}" 
												valueFormat="yyyy-MM-dd" 
												value="{/RespostaObrigacao/label_prazo_entrega}" 
												enabled="false"
												/>
										<!--<Label text="{/RespostaObrigacao/ano_calendario}"/>-->
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelPais}">
									<f:fields>
											<Input value="{/RespostaObrigacao/pais}" enabled="false" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelExtensao}">
									<f:fields>
											<DatePicker 
												placeholder="{i18n>viewGeralInsiraUmaData}" 
												valueFormat="yyyy-MM-dd" 
												value="{/RespostaObrigacao/data_extensao}" 
												enabled="{= !!${/RespostaObrigacao/ind_extensao_compliance} === true ? ( ${/JaDataObrigacaoConcluida} ? (!${/JaEstavaPreenchido} ? true : false ) : false) : false}"/>
												
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>viewComplianceListagemObrigacoesColunaPeriodicidade}">
									<f:fields>
											<Input enabled="false" value="{/RespostaObrigacao/descricao}"></Input>
									</f:fields>
								</f:FormElement>
									<f:FormElement label="{i18n>formularioObrigacaoLabelObrigacaoIniciada}">
									<f:fields>
										<CheckBox id="checkObrigacaoIniciada" enabled="{=  !!${/JaDataObrigacaoConcluida} ? !!${/JaEstavaIniciada} : false}" selected="{/RespostaObrigacao/ObrigacaoIniciada}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>ViewGeralSuporteHired}">
									<f:fields>
										<CheckBox id="checkSuporteContratado" select="onTrocarSuporte" selected="{/RespostaObrigacao/suporte_contratado}" enabled="{=  ${/JaDataObrigacaoConcluida} ? true : false }" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelSuporte}">
									<f:fields>
											<TextArea 
											value="{/RespostaObrigacao/suporte_especificacao}"
											id="textAreaSuporte"
											rows="5" 
											enabled="{= ${/RespostaObrigacao/suporte_contratado} ?  ( ${/JaDataObrigacaoConcluida} ? true : false ) : false}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelValorSuporte}">
									<f:fields>
										<Input id="ValorSuporte" value="{/RespostaObrigacao/suporte_valor}"  type="Number" enabled="{= ${/RespostaObrigacao/suporte_contratado} ?  ( ${/JaDataObrigacaoConcluida} ? true : false ) : false}"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>viewGeralMoeda}">
									<f:fields>
										
										<!--<Select 
												id="selectTipoMoeda" 
												items="{/DominioMoeda}" 
												selectedKey="{/RespostaObrigacao/fk_id_dominio_moeda.id_dominio_moeda}">
												<core:Item text="{nome}" key="{id_dominio_moeda}" />
											</Select>-->
											<ComboBox
											items="{/DominioMoeda}"
											selectedKey="{/RespostaObrigacao/fk_id_dominio_moeda.id_dominio_moeda}"
											enabled="{= ${/RespostaObrigacao/suporte_contratado} ? ( ${/JaDataObrigacaoConcluida} ? true : false ) : false}"
											>
											<core:Item text="{nome}" key="{id_dominio_moeda}" />
											</ComboBox>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>viewGeralEmpresa}">
									<f:fields>
												<!--<Select 
												id="selectTipoEmpresa" 
												items="{/Empresa}" 
												selectedKey="{/RespostaObrigacao/fk_id_empresa.id_empresa}">
												<core:Item text="{nome}" key="{id_empresa}" />
												</Select>-->
												<Input id="Empresa" value="{/RespostaObrigacao/nome}" enabled="false" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>formularioObrigacaoLabelAnoFiscal}">
									<f:fields>
											<DatePicker id="datepickerAnoFiscal" placeholder="Insira uma data" valueFormat="yyyy-MM-dd" value="{/RespostaObrigacao/ano_fiscal}" enabled="false" />
											<!--<Label text="{/RespostaObrigacao/ano_calendario}"/>-->
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>viewComplianceListagemObrigacoesSelectAnoCalendario}">
									<f:fields>
										<DatePicker 
												id="datepickerAnoCalendario" 
												placeholder="Insira uma data..." 
												valueFormat="yyyy-MM-dd" 
												value="{/RespostaObrigacao/ano_calendario}" 
												enabled="false"
												/>
										<!--<Label text="{/RespostaObrigacao/ano_calendario}"/>-->
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
				<f:Form id="formularioDocumentos">
					<f:title>
						<core:Title text="{i18n>formularioObrigacaoTituloDocumentos}"/>
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
							emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="true"/>
					</f:layout>
				<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement>
									<VBox>
										<VBox>
											<HBox>
												<CheckBox id="CheckSeleciona" text="{i18n>viewComplianceFormularioObrigacoesTituloConcluida}" selected="{/IsDeclaracao}" select="onSelecionaCheck" class="sapUiSmallMarginEnd" visible="{= ${/JaDataObrigacaoConcluida} ? true : false }" />
											</HBox>
											<HBox>
												<DatePicker id="DataAtual" valueFormat="yyyy-MM-dd" visible="{= ${/IsDeclaracao} === true ? true : false}" />
											</HBox>
											<HBox>
												<u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="" width="400px" tooltip="{i18n>viewGeralEnviarArquivoNodejs}"
													placeholder="{i18n>viewGeralEscolhaUmArquivo}"/>
												<Button id="btnEnviar" text="{i18n>viewGeralEnviarArq}" press="onEnviarArquivo"/>
											</HBox>
										</VBox>
										<Table id="tabelaDocumentos" inset="false" items="{ path: '/Documentos', sorter: [{ path: 'nome_arquivo' }, { path: 'data_upload' }] }">
											<headerToolbar>
												<Toolbar>
													<Title text="{i18n>viewFormularioComplianceBepsArquivosObrigacao}"/>
												</Toolbar>
											</headerToolbar>
											<columns>
												<Column>
													<Title text="Nome"/>
												</Column>
												<Column>
													<Title text="Data Upload"/>
												</Column>
												<Column width="6.5rem"/>
											</columns>
											<items>
												<ColumnListItem>
													<cells>
														<ObjectIdentifier title="{nome_arquivo}" text="{label_declaracao}" class="sapMTableContentMargin"/>
														<ObjectNumber number="{= ${/Linguagem} === 'EN-US' ? ( ${data_upload} !== null ? ${data_upload}.substring(5,7)+'/'+${data_upload}.substring(8,10)+'/'+${data_upload}.substring(0,4) : null) : ( ${data_upload} !== null ? ${data_upload}.substring(8,10)+'/'+${data_upload}.substring(5,7)+'/'+${data_upload}.substring(0,4) : null)}"/>
														<HBox>
															<Button icon="sap-icon://download-from-cloud" type="Accept" tooltip="Baixar arquivo" press="onBaixarArquivo" enabled="{btnDownloadEnabled}"
																class="sapUiSmallMarginEnd"/>
															<Button icon="sap-icon://delete" type="Reject" tooltip="Excluir arquivo" press="onExcluirArquivo" enabled="{btnExcluirEnabled}"/>
														</HBox>
													</cells>
												</ColumnListItem>
											</items>
										</Table>
									</VBox>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</f2:content>
		<f2:footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button 
					text="{i18n>formularioObrigacaoBotaoSalvar}" 
					type="Accept" 
					press="onSalvar"
					enabled="{/CancelaBotaoConfirmar}"/>
				<Button 
					text="{i18n>formularioObrigacaoBotaoCancelar}" 
					type="Reject" 
					press="onCancelar"
					enabled="{/CancelaBotaoCancelar}"
					/>
			</Toolbar>
		</f2:footer>
	</f2:DynamicPage>	
</mvc:View>